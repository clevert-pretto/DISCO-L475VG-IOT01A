{
    //COrtex-Debug related settings
    "cortex-debug.armToolchainPath": "/usr/bin", 
    "cortex-debug.gdbPath": "/usr/bin/gdb-multiarch",
    "cortex-debug.objdumpPath": "arm-none-eabi-objdump",
    "cortex-debug.nmPath": "arm-none-eabi-nm",
    "cortex-debug.variableUseNaturalFormat": false,

    //Editor related setting
    "editor.rulers": [80,100,120],
    
    // Hide the vendor folders from the 'Problems' tab
    "C_Cpp.errorSquiggles": "enabled",

    //Suppress warning for unused ones
    "c-cpp-flylint.flawfinder.enable": false,
    "c-cpp-flylint.flexelint.enable": false,
    "c-cpp-flylint.clang.enable": false,

    // Linting related settings
    "c-cpp-flylint.cppcheck.enable": true,
    "c-cpp-flylint.run": "onSave",
    "c-cpp-flylint.cppcheck.standard": ["c11"],
    "c-cpp-flylint.cppcheck.addons": [
        "${workspaceFolder}/build_utils/misra_rules.json"
    ],
    "c-cpp-flylint.cppcheck.extraArgs": [
        "--quiet",
        "--suppressions-list=${workspaceFolder}/build_utils/cppcheck_suppressions.txt"
    ],
    // Focus only on your Application and RTOS configuration
    "c-cpp-flylint.cppcheck.includePaths": [
        "${workspaceFolder}/03_FreeRTOS/App/Inc"
    ],
    // Exclude directories from flylint
    "c-cpp-flylint.excludeFromWorkspacePaths": [
        "**/03_FreeRTOS/Drivers/**",
        "**/03_FreeRTOS/Middlewares/**"
    ]
}