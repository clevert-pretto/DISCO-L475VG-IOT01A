{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Manual Build",
            "type": "shell",
            /* Just make. It will use the MODULE defined in the Makefile */
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/03_FreeRTOS"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Run Quality Gate (MISRA & Complexity)",
            "type": "shell",
            "command": "pre-commit",
            "args": [
                "run",
                "--all-files",
                "--config",
                "build_utils/.pre-commit-config.yaml"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}